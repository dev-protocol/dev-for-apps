{
	"name": "template-repos-ts",
	"version": "1.0.0",
	"description": "Template repository for using TypeScript",
	"main": "index.js",
	"scripts": {
		"start": "func start",
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{js,json,md,yml}'"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"@azure/cosmos": "^3.9.2",
		"ramda": "^0.27.1",
		"web3": "^1.3.0"
	},
	"devDependencies": {
		"@ava/typescript": "1.1.1",
		"@azure/functions": "1.2.2",
		"@types/dotenv": "8.2.0",
		"@types/node": "14.14.6",
		"@types/ramda": "0.27.31",
		"@types/sinon": "9.0.8",
		"@typescript-eslint/eslint-plugin": "4.6.0",
		"@typescript-eslint/parser": "4.6.0",
		"ava": "3.13.0",
		"dotenv": "8.2.0",
		"eslint": "7.12.1",
		"eslint-config-prettier": "6.15.0",
		"eslint-plugin-functional": "3.1.0",
		"eslint-plugin-prettier": "3.1.4",
		"husky": "4.3.0",
		"prettier": "2.1.2",
		"rimraf": "3.0.2",
		"sinon": "9.2.1",
		"typescript": "4.0.5"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/dev-for-apps.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/dev-for-apps/issues"
	},
	"homepage": "https://github.com/dev-protocol/dev-for-apps#readme"
}
